<%- include ../partials/header.ejs %>
<%- include ../partials/main_nav.ejs %>

<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Contact" name="name" required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Number</label>
                    <input type="text" class="form-control" id="numberTextField" placeholder="Enter the number" name="number" required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">E-Mail</label>
                    <input type="text" class="form-control" id="emailTextField" placeholder="Enter the email" name="email" required>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit">Add</i>
                </button>

                <a href="/contact-list" class="btn btn-warning">
                    <i class="fas fa-undo">Cancel</i>
                </a>
            </form>
        </div>
    </div>
</div>
<%- include ../partials/footer.ejs %>